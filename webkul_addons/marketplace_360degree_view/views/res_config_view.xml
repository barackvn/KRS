<odoo>
    <data>
        <record id="inherit_marketplace_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">marketplace.config.setting.360degree.view</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="odoo_marketplace.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='config_product_terms']//div[hasclass('row')]" position="inside">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <!-- <separator string="Allow 360 degree view"/> -->
                        <div class="o_setting_left_pane">
                            <field name="group_allow_360degree_view" class="oe_inline" help="Enable to allow 360 degree view for Products."/>
                        </div>
                        <div class="o_setting_right_pane" title="Allow 360 degree view for Products.">
                            <label for="group_allow_360degree_view" string="Allow 360 degree view"/>
                            <div class="text-muted">
                                â‡’ Enable to allow 360 degree view for Products.
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
